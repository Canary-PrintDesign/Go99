<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Favicon -->

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/favicon/manifest.json">
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#f6c636">
    <link rel="shortcut icon" href="/favicon/favicon.ico">
    <meta name="msapplication-config" content="/favicon/browserconfig.xml">
    <meta name="theme-color" content="#f6c636">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Go99" %></title>

    <link href="https://fonts.googleapis.com/css?family=Lato:400,400i,700,900|Oswald:400,700" rel="stylesheet">

    <%= stylesheet_link_tag 'main.bundle' %>
  </head>

  <body class="<%= page_classes %>">
    <%= partial 'partials/layouts/page_header' %>

    <div class="container">
      <div class="terms-menu">
        <%= partial 'partials/layouts/terms_menu' %>
      </div>
      <div class="terms-content">
        <%= yield %>
      </div>
    </div>

    <div class="clearfix"></div>

    <%= partial 'partials/layouts/page_footer' %>

    <%= javascript_include_tag 'main.bundle' %>
  </body>
</html>
